---
interface Props {
	title: string;
	bgColor: string;
	btnHighlightClass: string;
}
import Nav from '@components/Nav.jsx';
import Footer from '@components/sections/Footer.astro';
const { title, bgColor, btnHighlightClass } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative h-screen">
		<Nav client:only="react" bgColor={bgColor} btnHighlightClass={btnHighlightClass} />
		<div id="menuBtn"></div>
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	body {
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			'Segoe UI',
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			'Open Sans',
			'Helvetica Neue',
			sans-serif;
	}
</style>
